<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_recyleview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RecycleView" />
        <Button
            android:id="@+id/button_start_permission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="start_permission" />
        <Button
            android:id="@+id/button_exclude_recent_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="start_exclude_recent_activity" />
    </LinearLayout>
</ScrollView>